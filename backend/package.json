{
  "name": "backend",
  "version": "1.0.0",
  "description": "QuickVerdicts Backend API",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "start": "node index.js",
    "start:dev": "cross-env NODE_ENV=development node index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "migrate": "node database/runMigrations.js",
    "db:clear": "node database/clearDatabase.js",
    "create:admin": "node database/createAdmin.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs quickverdicts-backend",
    "pm2:monit": "pm2 monit",
    "health": "node -e \"require('http').get('http://localhost:4000/api/health', (r) => {let d=''; r.on('data', c => d+=c); r.on('end', () => console.log(d))})\"",
    "logs:create": "node -e \"const fs = require('fs'); if (!fs.existsSync('logs')) fs.mkdirSync('logs');\"",
    "prestart": "npm run logs:create"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/communication-calling": "^1.38.1",
    "@azure/communication-chat": "^1.6.0",
    "@azure/communication-common": "^2.4.0",
    "@azure/communication-identity": "^1.3.1",
    "@azure/communication-rooms": "^1.2.0",
    "@azure/storage-blob": "^12.28.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.8.1",
    "stripe": "^19.2.0",
    "tedious": "^18.6.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}